{
    "compilerOptions": {
        "noEmit": true, // 编译后不生成任何文件，让babel可以继续处理
        "module": "commonjs", // 生成代码模板标准
        "target": "es5", // 目标语言版本
        "lib": [
            "es5",
            "es6",
            "es2016",
            "dom"
        ], // ts需要引的库
        "allowJs": true,
        "jsx": "react",
        "removeComments": true, // 删除注释
        "esModuleInterop": true, // 允许使用es6 模块化规范
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": { // 路径映射
            "@/*": [
                "./src/*"
            ],
            "styles/*": [
                "./src/styles/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "views/*": [
                "./src/views/*"
            ],
            "api/*": [
                "./src/api/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "consts/*": [
                "./src/consts/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "src/public/**/*"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "src/**/*"
    ]
}
